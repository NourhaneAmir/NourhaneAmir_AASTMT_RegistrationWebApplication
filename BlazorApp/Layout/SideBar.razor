@using StudentRegistration.Shared.Models
@inject AuthState AuthState

<div>
    <div class="h-screen px-3 py-4 overflow-y-auto bg-white shadow-lg">
        <ul class="space-y-2 font-medium">
            <li>
                <div class="items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <div class="flex">
                        <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
                            <path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z" />
                            <path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z" />
                        </svg>
                        <span class="font-bold ms-2">Current Semester</span>
                    </div>
                    <span class="ms-3 text-sm mt-2">
                        @(CurrentSemester?.FullSemesterName ?? "Loading...")
                    </span>
                </div>
            </li>

            <li class="border-t border-gray-200 mt-2">
                <div class="items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <div class="flex">
                        <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" xmlns="http://www.w3.org/2000/svg" fill="currentColor" x="0px" y="0px" width="100" height="100" viewBox="0 0 64 64">
                            <path d="M 32 6 C 23.716 6 17 12.716 17 21 C 17 27.143736 20.698333 32.417464 25.986328 34.736328 L 25.986328 52.087891 C 25.986328 52.926891 26.336125 53.727875 26.953125 54.296875 L 30.205078 57.296875 C 31.199078 58.213875 32.745734 58.161641 33.677734 57.181641 L 39.427734 51.132812 C 39.911734 50.684813 40.05425 49.976 39.78125 49.375 L 38.007812 45.46875 L 38.007812 45.373047 L 40.417969 42.386719 C 41.142969 41.487719 41.178812 40.215391 40.507812 39.275391 L 38.007812 35.777344 L 38.007812 34.738281 C 43.298813 32.420697 47 27.145915 47 21 C 47 12.716 40.284 6 32 6 z M 32 12 C 34.209 12 36 13.791 36 16 C 36 18.209 34.209 20 32 20 C 29.791 20 28 18.209 28 16 C 28 13.791 29.791 12 32 12 z"></path>
                        </svg>
                        <span class="font-bold ms-2">Registration Number</span>
                    </div>
                    <span class="ms-3 text-sm mt-2">@(Student?.RegistrationNumber.ToString() ?? "N/A")</span>
                </div>
            </li>

            <li>
                <div class="items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <div class="flex">
                        <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                            <path d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z" />
                        </svg>
                        <span class="font-bold ms-2">Student Name</span>
                    </div>
                    <span class="ms-3 text-sm mt-2">@(Student?.FullName ?? "N/A")</span>
                </div>
            </li>

            <li class="border-t border-gray-200 mt-2">
                
                <div class="items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <div class="flex">
                        <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 20">
                            <path d="M16 14V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v15a3 3 0 0 0 3 3h12a1 1 0 0 0 0-2h-1v-2a2 2 0 0 0 2-2ZM4 2h2v12H4V2Zm8 16H3a1 1 0 0 1 0-2h9v2Z" />
                        </svg>
                        <span class="font-bold ms-2">College</span>
                    </div>
                    <span class="ms-3 text-sm mt-2 block">@(Student?.College ?? "N/A")</span>
                </div>
            </li>

            <li>
                <div class="items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <div class="flex">
                        <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                            <path d="M18 0H6a2 2 0 0 0-2 2h14v12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Z" />
                            <path d="M14 4H2a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2ZM2 16v-6h12v6H2Z" />
                        </svg>
                        <span class="font-bold ms-2 block">Department</span>
                    </div>
                    <span class="ms-3 text-sm mt-2">@(Student?.Department ?? "N/A")</span>
                </div>
            </li>

            <li class="border-t border-gray-200 mt-2">
                <div class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 17 20">
                        <path d="M7.958 19.393a7.7 7.7 0 0 1-6.715-3.439c-2.868-4.832 0-9.376.944-10.654l.091-.122a3.286 3.286 0 0 0 .765-3.288A1 1 0 0 1 4.6.8c.133.1.313.212.525.347A10.451 10.451 0 0 1 10.6 9.3c.5-1.06.772-2.213.8-3.385a1 1 0 0 1 1.592-.758c1.636 1.205 4.638 6.081 2.019 10.441a8.177 8.177 0 0 1-7.053 3.795Z" />
                    </svg>
                    <span class="ms-2 font-bold">Total Credit Hours</span>
                    <span class="ms-2">@(Student?.TotalCreditHours.ToString() ?? "0")</span>
                </div>
            </li>

            <li>
                <div class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="84" height="84" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="32" cy="32" r="30" />
                        <polygon points="12,26 32,16 52,26 32,34" />
                        <rect x="22" y="32" width="20" height="4" rx="1" />
                        <path d="M40 20 L40 32" />
                        <circle cx="40" cy="34" r="1.5" fill="#0A66C2" />
                        <text x="32" y="52" text-anchor="middle" font-family="Arial, Helvetica, sans-serif"
                              font-size="10.5" font-weight="700" fill="#0A66C2" stroke="none">GPA</text>
                    </svg>
                    <span class="font-bold ms-2">GPA</span>
                    <span class="ms-3">@(Student?.GPA.ToString("F2") ?? "0.00")</span>
                </div>
            </li>

            <li>
                <div class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                    <svg class="shrink-0 w-5 h-5 text-gray-400 transition duration-75 group-hover:text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
                    </svg>
                    <span class="font-bold ms-2">Status</span>
                    <span class="ms-3 text-sm @(Student?.Status == "Regular" ? "text-green-600" : "text-red-600") font-semibold">
                        @(Student?.Status ?? "Unknown")
                    </span>
                </div>
            </li>
        </ul>
    </div>
</div>

@code {
    [Parameter]
    public Student? Student { get; set; }

    [Parameter]
    public Semester? CurrentSemester { get; set; }
}